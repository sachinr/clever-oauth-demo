<h1>Clever Instant Login Demo</h1>

<% if @user_id %>
  <p>You're signed in</p>
  <p>
    <%= @user_id %>
  </p>
  <p>
    <%= @session_info %>
  </p>
  <form method="post" action="sign_out" class="inline">
    <button type="submit" class="link-button">Sign Out</button>
  </form>
<% else %>
  <a href="https://clever.com/oauth/authorize?response_type=code&client_id=eec6778f70f963f5cad0&redirect_uri=http%3A%2F%2Flocalhost%3A9292%2Fauth%2Fclever" alt="Log in with Clever"><img src="https://s3.amazonaws.com/assets.clever.com/sign-in-with-clever/sign-in-with-clever-full.png" /></a>
<% end %>


